@model BookShop.Models.Cart

<h1>Cart</h1>

@if (Model.cartItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Book</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.cartItems)
            {
                var bookTotal = item.book.Price * item.Quantity;
                <tr>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.book.ImgUrl" style="height: 4em"></a>
                    </td>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.book.Title</a>
                    </td>
                    <td>
                        @bookTotal.ToString("c")
                    </td>
                    <td>
                        <a asp-controller="Cart" asp-action="REduceQuantity" asp-route-id="@item.book.Id"><i class="fa-solid fa-minus"></i></a>
                        <span >@item.Quantity</span>
                        <a asp-controller="Cart" asp-action="IncreaseQuantity" asp-route-id="@item.book.Id"><i class="fa-solid fa-plus"></i></a>
                    </td>
                    <td>
                        <a asp-controller="Cart" asp-action="RemoveFrpmCart" asp-route-id="@item.book.Id" class="text-danger"><i class="fa-solid fa-xmark"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td class="text-right">
                    <strong>Total:</strong>
                </td>
                <td>
                    <strong>@Model?.GETCartPrice().ToString("c")</strong>
                </td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <a class="a-cleanup" asp-controller="Oder" asp-action="CheckOut"><div class="btn btn-success float-right mr-5">Checkout <i class="fa-solid fa-angles-right"></i></div> </a>
    <a class="a-cleanup" asp-controller="Cart" asp-action="CLearCart"><div class="btn btn-danger float-right mr-5"><i class="fa-solid fa-trash-can"></i> Empty Cart</div> </a>
}
else
{
    <h3 class="text-center">Cart is empty</h3>
}